page{height:100%;}
.container{height:100%;overflow-x:hidden;}
.addResource-page{flex:1;width:100%;height:100%;overflow-x:hidden;}
.companydetails{background:#fff;padding-left:5%;border-bottom:1rpx solid #e5e5e5;}
.companydetails .row{border-bottom:1rpx solid #e5e5e5;padding:30rpx 0;padding-right:5%;font-size:28rpx;color:#353535;}
.companydetails .row:last-child{border-bottom:none;}
.companydetails .row .placeholderstyle{color:#999;}
.companydetails .row input{float:right;width:500rpx;position:relative;top:0rpx;text-align:right;}
.companydetails .row .text{float:right;max-width:500rpx;white-space:nowrap; overflow:hidden;
	text-overflow:ellipsis;}
.companydetails .row .text image{width:16rpx;height:23rpx;margin-left:10rpx;}
.step2-title{padding:30rpx;background:#fff;width:100%;border-bottom:1rpx solid #eeeeee}
.resourceList{background:#fff;box-sizing: border-box;}
.resourceBlock{height:140rpx;padding:30rpx;position:relative;display:flex;align-items: center;}
.resourceBlock-image{}
.resourceBlock-image .addiamge{width:252rpx;height:140rpx;}
.icon-del{width:30rpx;height:30rpx;position: relative;margin-right: 30rpx;float:left;z-index:10;}
.resourceBlock-text text{font-size:28rpx;color:#666;display:inline-block;line-height:48rpx;
	overflow:hidden;text-overflow:ellipsis;	display:-webkit-box;
	-webkit-box-orient:vertical;-webkit-line-clamp:3;max-width:490rpx;}

.noDescription {background: #fff;text-align: center;color: #888;padding-top:200rpx;box-sizing:border-box;}
.noDescription image {width: 250rpx;height: 240rpx;}
.noDescription .textTitle {font-size: 34rpx;margin: 20rpx 0;}
.noDescription .createBtn {width: 162rpx;height: 52rpx;line-height: 51rpx;color: #3073e3;background: #eaf1fc;margin: 25rpx auto 0;border-radius: 10rpx;font-size: 26rpx;}


.step2-addbtn{position:fixed;bottom:157rpx;left:0;height:88rpx;line-height:68rpx;background:#fff;width:100%;padding-top:30rpx;
	display:flex;justify-content:center;font-size:28rpx;}
.step2-addbtn>view{flex:1;text-align:center;}
.step2-addbtn image{width:40rpx;height:37rpx;margin-right:20rpx;position: relative;top: 6rpx;}
.add-step2 .footer{background:#efeff4;}
.icon-move{width:39rpx;height:22rpx;position:absolute;top:88rpx;left:640rpx;}
.icon-del-box{height:100%;width:100rpx;}
.add-step2{height:100%;}
.footer{position:fixed;bottom:0;left:0;height:125rpx;background:#fff;width:100%;padding-top:30rpx;}
.footer button{width:690rpx;height:89rpx;line-height:89rpx;margin:0 auto;font-size:36rpx;color:#fff;}
.footer2 button{width:329rpx;height:86rpx;line-height:86rpx;border-radius:10rpx;}
.footer2 button:nth-child(1){margin-left:30rpx;}
.footer2 button:nth-child(2){margin-right:30rpx;}


.touchView{z-index: 200; width: 100px;position: absolute;top: 0;right:0; top: 0;}

.edit_row{ width: 100%; overflow: hidden; font-size: 12px;box-sizing: border-box; padding: 0; border-bottom: 1rpx #ddd solid;}
.edit_col1{ float: left; width: 12%; text-align: center;}
.edit_col2{ float: left; width: 40%;}
.edit_col3{ float: left; width: 24%; text-align: center;}
.edit_col4{ float: left; width: 23%; text-align: center; position: relative;}
.edit_del{ float: left;padding-right: 10px; color: #fd7736;}
.edit_finish{ float: right; padding-right: 10px; width: 24%;height:40px;color: #fd7736;}

.edit_row_title .edit_col4:before{ content:''; position: absolute; width: 1px; height: 18px; background-color: #e8e8e8; left: 0%; top: 50%; margin-top: -9px; }

.edit_title_col1{ position: relative; left: 10px; }

.stay_top{ height: 47px; line-height: 47px;}
.stay_top .edit_row{ height: 47px; padding: 0; position: fixed; z-index: 99; left: 0; top: 0; width: 100%; color: rgba(89,89,89,.8); font-size: 14px;}

.edit_row_holder{ background-color: #fff;}

.edit_row_on .ico_checker{ background-position: 0 -17px;}

.moveable_row{ width: 100%; position: absolute;top: 0;left: 0; z-index: 100;}
.moveable_row .edit_row{ box-shadow: 0 0 12px rgba(0,0,0,.2)}

