/* pages/mine/myDemand/myDemand.wxss */
page{height:100%;background:#efeef3;}
.myResource-page{flex:1;width:100%;}
.myResource-header{height:87rpx;line-height:87rpx;text-align:center;display:flex;justify-content:space-between;color:#888;
	background:#fff;border-bottom:2rpx solid #e5e5e5;}
.myResource-header>view{flex:1;}
.myResource-header image{width:23rpx;height:15rpx;margin-left:10rpx;position:relative;top:-2rpx;}
.resourseBlock{background:#fff;padding:30rpx 30rpx 20rpx;/*margin-bottom:20rpx;*/border-bottom: 20rpx solid #efeef3;}
.resourseBlock:last-child{margin-bottom:0;}
.resourseBlock .title{overflow:hidden;text-overflow:ellipsis;
	display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:2;}
.resourseBlock .content{font-size:28rpx;margin-top:20rpx;overflow:hidden;text-overflow:ellipsis;
	display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:2;}
.resourseBlock .blockfooter{margin-top:24rpx;color:#b2b2b2;}
.resourseBlock .blockfooter>view{display:inline-block;}
.resourseBlock .blockfooter .point{width:8rpx;height:8rpx;background:#b2b2b2;border-radius:4rpx;margin:0 26rpx;
	position:relative;top:-5rpx;}
.resourseBlock .onshelves{float:right;border:2rpx solid #b2b2b2;padding:2rpx 6rpx;border-radius:6rpx;}
.footer{position:fixed;bottom:0;left:0;height:120rpx;background:#fff;width:100%;padding-top:30rpx;border-top: 1rpx solid #eeeeee;}
.footer button{width:690rpx;height:89rpx;line-height:89rpx;margin:0 auto;font-size:36rpx;color:#fff;}
.resourseList{margin-bottom:150rpx;}
.noContent{text-align: center; position: absolute;left:50%;top:40%;margin-left: -128rpx;margin-top: -97rpx;}
.noImage{width: 256rpx;height: 194rpx;}
.noTextWrap{padding-top: 15rpx;}
.noText{font-size: 34rpx;color:#888888;}
.subjectName{font-size: 24rpx;color:#888;}

.commonhoverclass{background:#ededed;}

 .button-hover{background:rgba(48,115,227,0.9) !important;}
