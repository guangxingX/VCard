/* pages/financial/investmentplan/index.wxss */
@import "/pages/financial-index/index.wxss";
.mar-b-fix{
    margin-bottom: 150rpx;
}
.fix-btn-bottom{
    position:fixed;
    height: 126rpx;
    bottom:0;
    width: 100%;
    background:rgba(255,255,255,1);
    border:1px solid rgba(204, 204, 204, 1);
}
.fix-btn-bottom view{
    margin: 20rpx 30rpx;
    background: #3073E3;
    border-radius:4rpx;
    height:88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size:32rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
}
.item-slot{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height:88rpx ;
    font-size:28rpx;
    font-weight:400;
    color:rgba(102,102,102,1);
    margin-left: 30rpx ;
    margin-right: 40rpx ;
}
.item-slot .share-bar{
    display: flex;
    margin-bottom: 0!important;
    align-items: center;
    height: 100%;
}
.item-slot .share-bar .item{
    display: flex;
    margin-bottom: 0!important;
    height: 100%;
    align-items: center;
    /*抵消margin*/
    transform: translateY(-10rpx);
}
.item-slot .share-bar .item:nth-child(1){
    margin-right: 85rpx;
}
.item-slot .share-bar .item image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 16rpx;
}
.none{
    background: none !important;
    font-size:28rpx!important;
    font-weight:400;
    color:rgba(102,102,102,1)!important;
}
.none::after{
    border: none;
}
