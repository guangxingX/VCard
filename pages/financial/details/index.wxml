<import src="../../../templates/enterpriseListcard/enterpriseListcard.wxml" />
<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar weui-fff">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
          <!-- 项目简介 -->
          <view class="part1 weui-fff">
            <w-head-programe name="项目简介" doing="{{true}}" />

            <view class="weui-panel__bd">
              <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                  <image class="weui-media-box__thumb" src="http://oojjuzes7.bkt.clouddn.com/21.jpg" binderror="errorFunction" />
                </view>
                <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                  <view class="weui-media-box__title">标题一</view>
                  <view class="weui-media-box__desc">由各种物质组成的巨型球状天体，叫做星球。星球有一定的形状，有自己的运行轨道。</view>
                </view>
              </navigator>
            </view>

            <template is="enterpriseListcard" data="{{item,iconList}}" />
            <view class="sublab">
              <view class="info-1 item">
                <image src="image/block.png" />
                <text>大数据/新媒体/教育培训/消费升级</text>
              </view>
              <view class="info-2 item">
                <image src="image/info.png" />
                <text>1000W-2000W·pre-A轮·上海</text>
              </view>
            </view>
          </view>
          <!-- 项目路演视频 -->
          <view class="part1 weui-fff">
            <w-head-programe name="项目路演视频"/>
            <view class="v-c">
            <video class="myVideo" id="myVideo" src="http://wxsnsdy.tc.qq.com/105/20210/snsdyvideodownload?filekey=30280201010421301f0201690402534804102ca905ce620b1241b726bc41dcff44e00204012882540400&bizid=1023&hy=SH&fileparam=302c020101042530230204136ffd93020457e3c4ff02024ef202031e8d7f02030f42400204045a320a0201000400" danmu-list="{{danmuList}}" enable-danmu danmu-btn controls></video>
            </view>
             <!-- 联系人 -->

            
          </view>
        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">选项二的内容</view>
        <view class="weui-tab__content" hidden="{{activeIndex != 2}}">选项三的内容</view>
        <view class="weui-tab__content" hidden="{{activeIndex != 3}}">选项四的内容</view>
      </view>
    </view>
  </view>
</view>