        </view>
        <view class="page__bd under">
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell">
                    <view class="weui-cell__bd">
                        <textarea bindinput="bindTextAreaBlur" name="textarea" class="weui-textarea"
                                  placeholder="请输入留言内容" style="height: 466rpx" maxlength="500"/>
                        <view class="weui-textarea-counter">{{length}}/500</view>
                    </view>
                </view>
                <view bind:tap="onSelectBusinessPlan" url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__bd">商业计划书</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access fc" style="{{pid==''?'color:#888888':''}}">{{projectPlanName}}</view>
                </view>
                <view bind:tap="onSelectCard" url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__bd">联系人</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access fc" style="{{wissoCardId==''?'color:#888888':''}}">{{info.legalPerson}}</view>
                </view>

                <view class="weui-cell">
                    <view class="weui-cell__bd">公司</view>
                    <view class="weui-cell__ft fc" style="{{companyId==''?'color:#888888':''}}">{{info.companyname}}</view>
                </view>
            </view>
        </view>


    </view>

</view>
