/* pages/maillist/maillist.wxss */
.container{height:100%;}
.mail-page{flex:1;width:100%;}
.header{height:275rpx;background:#3073e3;padding-top:20rpx;}
.tagbox{width:690rpx;margin:0 auto;background:#fff;border-radius:10rpx;overflow:hidden;
  position:relative;z-index:10;}
/*.tagbox2{height:428rpx;box-shadow:0px 2px 3px #ddd;}*/
.tagbox2{padding-bottom:20rpx;box-shadow:0px 0px 10px #e6e6e6;height:410rpx;}
.tagbox1{height:221rpx;box-shadow:0px 0px 10px #e6e6e6;}
.itemTag{height:100rpx;line-height:100rpx;display:flex;}
.itemTag .tag-tag{text-align:center;/*background:#fafafa;*/flex:1;border-bottom: 1rpx solid #dadada;position: relative;}
.itemTag .tag-tag.active{/*background:#e5ecf8;*/color:#3073e3;}
.tag-line{width: 182rpx;height: 4rpx;background:#3073e3;position: absolute;bottom:0;left:50%;margin-left: -91rpx;}
.header-input{width:632rpx;height:56rpx;line-height:56rpx;border:2rpx solid #b2b2b2;margin:32rpx auto;border-radius:10rpx;
