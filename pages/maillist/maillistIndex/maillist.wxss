.header-input input{width:100%;height:100%;line-height:56rpx;border-radius:10rpx;}
.search-block{width:650rpx;margin:0 auto;padding-left: 30rpx;}
.search-block {display:flex;align-content:space-between;flex-wrap: wrap}
.search-block .text{padding:4rpx 10rpx;background:#eee;color:#888;height:48rpx;line-height:48rpx;
	text-align:center;width:120rpx;display:inline-block;font-size: 26rpx;border-radius: 10rpx;}
.search-block>view{width:25%;text-align:left;margin-bottom:20rpx;}
.lookmore image{width:16rpx;height:25rpx;position:relative;top:3rpx;margin-left:10rpx;}
.lookmore{text-align:right;color:#3073e3;padding-right:30rpx;}
.content2{margin:0 auto;background:#fff;padding:185rpx 30rpx 0;padding-bottom: 10rpx;}
.content .title{overflow:hidden;height:85rpx;line-height: 85rpx;}
.content .title .addnavigator{color:#3073e3;}
.content .title .addnavigator image{width:16rpx;height:25rpx;position:relative;top:3rpx;margin-left:10rpx;}
.content1{width:100%;background:#efeff4;}
.content1 .title{padding:0 30rpx;margin-bottom:0;background:#fff;border-bottom: 1rpx solid #eeeeee;}
.searchIco{width: 25rpx;height: 25rpx;position: absolute;left:12rpx;top:15rpx;}
.contetn2Title{border-bottom: 1rpx solid #eeeeee;}
.ccListBlock{border-bottom: 1rpx solid #eeeeee;}
.excellentTitle{font-size: 32rpx;}
