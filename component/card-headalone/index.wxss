/* component/card-headalone/index.wxss */
.ha-cells{
    border-top: 1rpx solid #EEEEEE;
    color : #fff;
    background: #fff;
    display: flex;
    justify-content: center;

}

.ha-cell{
    margin-top:30rpx ;

    width:688rpx;
    height:396rpx;
    background:rgba(103,103,103,1);
    border-radius:8rpx;
}
.ha-cell-bd{
    padding: 58rpx 54rpx 42rpx 52rpx;
}
.ha-bd{
    position: relative;
    display: flex;
    justify-content: space-between;

}
.avatar{
    width: 118rpx;
    height: 119rpx;
}
.name view:nth-child(1){
    font-size:56rpx;
    line-height: 56rpx;
}
.name view:nth-child(2){
    margin-top: 26rpx;
    font-size:26rpx;
    line-height: 26rpx;
}
.ha-footer{}
.ha-footer .ha-footer-item{
    margin-top:36rpx ;
    font-size:26rpx;
    line-height: 26rpx;
}
.ha-footer .ha-footer-item image{
    width: 22rpx;
    height: 24rpx;
    margin-right: 27rpx;
}
.info{
    height: 105rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size:28rpx;
    color:rgba(51,51,51,1);
    background-color: #fff;
}
