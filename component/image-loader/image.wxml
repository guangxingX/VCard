<view wx:if='{{!finishLoadFlag}}'
 mode='{{mode}}' src='{{defaultImage}}'
  style='{{width ? "width:" + width : ""}};{{height ? "height:" + height : ""}}' 
  class='image-class' >
    {{defaultText}}
  </view>
<image mode='{{mode}}' 
class='{{finishLoadFlag ? "" : "before-load"}}' 
src='{{originalImage}}' 
binderror='errorshow'
bindload='finishLoad' 
style='{{finishLoadFlag && width ? "width:" + width : ""}};{{finishLoadFlag && height ? "height:" + height : ""}}' />