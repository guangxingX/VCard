/* component/link-1/index.wxss */
.container{
  height: 183rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
}
.avatar{
  margin-left: 29rpx;
  margin-right: 26rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.info{
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.info view:nth-child(1){
  line-height:34rpx;
  font-size:34rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  
}
.info view:nth-child(2){
  margin-top: 19rpx;
  line-height: 26rpx;
  font-size:26rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  
}
.call{
  margin-right: 31rpx;
}
.call image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 22rpx;
}
.call text{
  height:28rpx;
  line-height: 28rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(48,115,227,1);
}