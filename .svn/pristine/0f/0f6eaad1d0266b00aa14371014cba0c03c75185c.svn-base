.border {
  position: relative;
}

.border:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #e5e5e5;
  color: #e5e5e5;
  /* left: 15px; */
}

.bottom-btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 112rpx;
  z-index: 10;
  align-items: center;
}

.bottom-btn .btn-1 {
  display: flex;
  justify-content: center;
  width: 219rpx;
  font-size: 32rpx;
  height: 100%;
  align-items: center;
  color: rgba(57, 57, 57, 1);
  
}

.bottom-btn .btn-1 image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 17rpx;
}

.bottom-btn .btn-2 {
  flex: 1;
  height: 100%;
  background: rgba(48, 115, 227, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
}

