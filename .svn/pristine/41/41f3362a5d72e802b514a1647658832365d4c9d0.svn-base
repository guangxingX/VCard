/* pages/financial/index/index.wxss */
@import "/style/weui.wxss";

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 60px;
  text-align: center;
}

.search-icon {
  position: absolute;
  width: 44rpx;
  height: 44rpx;
  top: 27rpx;
  right: 30px;
}

.weui-navbar {
  justify-content: center;
  position: fixed;
  z-index: 10;
  background: #fff;
}

.weui-navbar__item {
  width: 91rpx;
  flex: none !important;
}

.weui-navbar__item:first-child {
  margin-right: 62rpx;
}

.weui-navbar__slider {
  width: 30px !important;

}

.weui-tab__content {
  text-align: left !important;
  padding-top: 0 !important;
  background: #efeff4;
}

.add-btn {
  width: 126rpx;
  height: 126rpx;
  position: fixed;
  bottom: 14rpx;
  right: 12rpx;
  z-index: 11;
}

.add-btn image {
  width: 100%;
  height: 100%;
}

.noContent {
  text-align: center;
  position: absolute;
  left: 50%;
  top: 30%;
  margin-left: -128rpx;
  margin-top: -109rpx;
}

.noImage {
  width: 256rpx;
  height: 218rpx;
}

.noTextWrap {
  padding-top: 15rpx;
}

.noText {
  font-size: 34rpx;
  color: #888;
}
.weui-loadmore__tips_in-line {
  background: none!important;
}
.option-bar{
    position: fixed;
    z-index: 9;
    left:0;
    right:0;
  background-color: #fff;
  display: flex;
  padding: 0 100rpx;
  height: 88rpx;
  justify-content: space-between;
  align-items: center;
    border-bottom: 1rpx solid #eee;
  /*margin-bottom: 18rpx;*/
}

.option-bar .bar-item{

}
.option-bar .bar-item text{
  font-size:26rpx;
  font-weight:500;
  color:rgba(53,53,53,1);
 }
.option-bar .bar-item image{
  width: 22rpx;
  height: 22rpx;
  margin-left:20rpx;
}
.l-item view{
  margin-bottom:18rpx ;
}
.l-item:first-child>view{
    margin-top: 106rpx;
}
