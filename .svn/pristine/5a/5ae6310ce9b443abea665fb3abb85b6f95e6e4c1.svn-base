/*这个是资源、需求详情里面的留言*/
.messageli{padding:30rpx;background:#fff;color:#353535;border-bottom:2rpx solid #e5e5e5;position:relative;}
.messageli .logo{width:84rpx;height:84rpx;border-radius:50%;float:left;}
.messageli .messagecontent{margin-left:109rpx;}
.messageli .messagecontent .title{font-size:34rpx;overflow:hidden;text-overflow:ellipsis;
  display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:2; display:flex;align-items: center;justify-content: space-between;color:#3073e3;}
.messageli .messagecontent .title .name{font-weight: 900;}
.messageli .messagecontent .phoneWrap{display:flex;align-items: center;}
.messageli .messagecontent .title .phoneIcon{width:30rpx;height:30rpx;margin-right:10rpx;}
.messageli .messagecontent .createtime{color:#888;margin-top:20rpx;}
.messageli .messagecontent .text{font-size:28rpx;margin-top:20rpx;margin-bottom:20rpx;color:#888;}
.messageli .messagecontent .leaveContent{color:#000;line-height: 1.3;}
.messageli .point{width:20rpx;height:20rpx;border-radius:50%;background:#f12c20;
  position:absolute;top:22rpx;left:110rpx;}
