/* pages/homePage/businessInfo/businessInfo.wxss */
page{height:100%;}
.business-page{flex:1;width:100%;}
.card{background:#fff;padding-top:25rpx;padding-bottom:25rpx;}
.tag-tag{width: 690rpx;height: 397rpx;margin:0 auto;background-color: #21242b;background-size:100% 100%;
  border-radius: 10rpx;box-shadow: 0px 2px 3px #ccc;position: relative;padding-left:30rpx;
box-sizing: border-box;}
.tag-tag .cardbg{position:absolute;top:0;left:0;width:100%;height:100%;border-radius: 10rpx;}
.tag-tag .section-1{display: flex;height: 136rpx;line-height: 136rpx;flex-direction: row;padding: 20rpx;
  position:relative;z-index:10;}
.section-2{position:relative;z-index:10;}
.tag-tag .section-1 .avatar{width:136rpx;height: 136rpx;float: left;}
.avatar image{width: 127rpx;height: 127rpx;border-radius: 50%;}
.flex1{height: 55rpx;line-height: 55rpx;}
.flex2{height: 40rpx;line-height: 40rpx;}
.flex1 image{width:20rpx;height: 16rpx;}
.tag-tag .section-1 .detail{flex: 3;float: right;display:flex;flex-direction:column;
  padding-top:16rpx;margin-left:10rpx;max-width:400rpx;}
.detail .name{color:#fff;font-size:40rpx;white-space:nowrap; overflow:hidden;
    text-overflow:ellipsis;max-width: 100%;}
.detail .name image{width:24rpx;height:28rpx;margin-left:20rpx;}
.detail .comp{font-size: 26rpx;color:#fff;}
.section-2-detail .comp{line-height: 20rpx;font-size: 26rpx;color:#fff;line-height:45rpx;height:45rpx;
    white-space:nowrap;overflow:hidden;text-overflow:ellipsis;}
.section-2-detail .comp.companyName{font-size:32rpx;margin-top:10rpx;margin-bottom:10rpx;}
.section-2-detail .comp.companyName .text{display: inline-block;white-space:nowrap; overflow:hidden;
	text-overflow:ellipsis;max-width: 500rpx;}
.section-2-detail .comp.companyName .authentication{display:inline-block;font-size:17rpx;color:#f19942;
	margin-left:20rpx;position:relative;top:-4rpx;}
.section-2-detail .comp.companyName .authentication text{position:relative;top:-4rpx;left:2rpx;}
.tag-tag .section-2{height: 204rpx;}
.section-2-detail{padding-left: 20rpx;color:#aaa;}
.uploadphoto{display:flex;align-content:space-between;background:#fff;border-top:1rpx solid #eeeeee;padding:22rpx 5%;
	color:#999;font-size:28rpx;}
.uploadphoto .photo{width:96rpx;height:96rpx;border-radius:50%;flex:1;}
.uploadphoto .photo image{width:96rpx;height:96rpx;border-radius:50%;flex:1;}
.uploadphoto .text{line-height:96rpx;}
.uploadphoto .text image{width:16rpx;height:25rpx;margin-left:10rpx;}
.details{background:#fff;padding-left:5%;margin-top:20rpx;}
.details .row{border-bottom:1rpx solid #eeeeee;padding-right:5%;font-size:28rpx;color:#353535;
    height: 90rpx;line-height:90rpx;}
.details .row .placeholder{color:#999;}
.details .row input{float:right;width:500rpx;position:relative;text-align:right;height: 80rpx;line-height:80rpx;padding-top: 5rpx;}
.details .row .text{float:right;}
.details .row .text image{width:16rpx;height:25rpx;margin-left:10rpx;}
.footer{padding:36rpx 5% 136rpx;}
.footer view{color:#3073e3;font-size:28rpx;text-align:center;margin-bottom:50rpx;}
.footer button{background:#3073e3;color:#fff;}
.footer .button-hover{background:#3073e3;}
.changebgimage.tag-blue{width:150rpx;height:72rpx;position:absolute;right:-11rpx;top:26rpx;z-index:100;}
.changebgimage.tag-blue image{width:150rpx;height:72rpx;position:absolute;right:0rpx;top:0rpx;}
.changebgimage.tag-blue text{position:absolute;right:20rpx;top:16rpx;color:#fff;font-size:26rpx;}

.cropper-wrapper{height:100%;width:100%;position: fixed;top: 0;left: 0;z-index:20;}
.cropper{position: fixed;top: 0;left: 0;z-index:20;}
.cropper-buttons{position:fixed;bottom:0;left:0;background-color: rgba(0, 0, 0, 0.95);color: #04b00f;width:100%;height:100rpx;line-height:98rpx;z-index:100;}
.cropper-buttons view{width:50%;display:inline-block;text-align:center;}
.textcolor999{color:#999;}
.card-icon-address{height:24rpx !important;width:20rpx !important;}
.hoverClass{color:#fff !important;}
button[disabled][type="default"],wx-button[disabled]:not([type]) {color:#fff !important;}
.authenticationIco{margin-right: 5rpx;}
