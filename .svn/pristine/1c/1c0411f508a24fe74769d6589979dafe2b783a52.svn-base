<!--component/note/item/index.wxml-->
<view class="weui-cell fff">
    <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
        <image src="{{src}}" style="width: 50px; height: 50px; display: block"/>
        <view class="weui-badge" style="position: absolute;top: -.4em;right: -.4em;">{{num}}</view>
    </view>
    <view class="weui-cell__bd">
        <view>{{name}}</view>
        <view style="font-size: 13px;color: #888888;">{{tip}}</view>
    </view>
</view>
