.wrap{height:100%;position: relative;}
.header{padding-left: 30rpx;/*border-bottom: 1rpx solid #e5e5e5;*/border-bottom: 18rpx solid #efeff4;}
.title{font-size: 28rpx;}
.input{display: inline-block;padding-left: 40rpx;font-size: 28rpx;width:520rpx;}
.placeholder{font-size: 28rpx;}
.headerBlock{display:flex;align-items: center;height: 90rpx;}
.headerBlock-1{border-bottom: 1rpx solid #e5e5e5;}
.content{height:750rpx;overflow: scroll;}
.footer{width: 100%;padding-top: 18rpx;position: fixed;bottom:0;background:#efeff4;}
.footer-top{height: 88rpx;border-top:1px solid #e5e5e5 ;border-bottom:1px solid #e5e5e5 ;position: relative;display:flex;align-items:center;background:#fff;}
.block-img{width: 40rpx;height: 37rpx;vertical-align: middle;}
.block-text{align-self:top;font-size: 28rpx;padding-left: 20rpx;}
.footer-block{text-align: center;width: 50%;}
.line{position: absolute;width: 1rpx;height: 40rpx;background: #e5e5e5;left:50%;margin-left: -0.5rpx;}

.footer-b{display:flex;justify-content: space-around;}
.delete,.save{width: 42%;margin:30rpx 0;}

.delImg{height: 30rpx;width:30rpx;position: absolute;left:30rpx;}
.movieImg{width: 39rpx;height:22rpx;position: absolute;right:30rpx;}
.richWrap{position: relative;padding:30rpx 180rpx 30rpx 90rpx;display:flex;align-items: center;max-height: 200rpx;overflow:hidden;border-bottom: 1rpx solid #e5e5e5;box-sizing: border-box;}
.richTxtWrap{text-overflow: ellipsis;white-space: normal;overflow:hidden;max-height: 110rpx;}

.richImgWrap .contentText{color:#666666;font-size:28rpx;color:#666;display:inline-block;line-height:48rpx;overflow:hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:3;max-width:480rpx;}
.richImgWrap{}

.richImgWrap .content-img{width: 252rpx;height: 140rpx;}

