    },
    onTapOut(){
        lookforsb.putInvestmentOperation(userId,this.data.id,'2').then(res=>{
            wx.navigateBack()
            wx.showToast({
                title: '下架成功',
                icon:'none'
            })
        })
    },
    onTapIn(){
        if(this.data.stateType!=2){
          return;
        }
        lookforsb.putInvestmentOperation(userId,this.data.id,'0').then(res=>{
            wx.navigateBack()
            wx.showToast({
                title: '上架成功',
                icon:'none'
            })
        })
    },
    onSendBook() {

        switch (this.data.type) {
            case '1':
                console.log(this.data.direction);
                console.log(this.data.stage);
                console.log(this.data.cardinfo.id);
                console.log(this.data.cardinfo);
                console.log(this.data.cardinfo.name);
                console.log('logo:'+this.data.cardinfo.logo);
                console.log(this.data.id);
                // var logo = this.data.myinfo.cardInfo.logo||''
                var url ='/pages/financial/card/sendBP/index?'
                    +`stage=${this.data.stage}&&`
                    +`label=${this.data.direction}&&`
