                //     +`position=${this.data.myinfo.cardInfo.position}&&`
                //     +`company=${this.data.myinfo.cardInfo.companyName}&&`
                    +`logo=${this.data.cardinfo.logo}&&`
                    +`cardId=${this.data.id}&&`
