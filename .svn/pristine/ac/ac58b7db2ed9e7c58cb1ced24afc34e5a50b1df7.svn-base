                    url,
                })

                break;
            case '2':
                console.log(this.data.field,
                    this.data.stage,
                    this.data.type,
                    this.data.myinfo,
                    this.data.myinfo.cardInfo,
                    this.data.myinfo.cardInfo.name,
                    this.data.myinfo.cardInfo.position,
