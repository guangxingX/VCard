// pages/financial/edit/funding-programs/his/index.js

Page({

  /**
   * 页面的初始数据
   */
  data: {
    //TODO 产品需要顶一下 范围
      countries: ["100w", "200w", "500w"],
      countryIndex: 0,

      accountNum:'100w', //金额
      date: "2019-01-08",//时间


      info:{}, //缓存
      index:'0',//缓存


      phase:'',//论次

      options:{}, //缓存

      tip:'',
      showTopTips:false,
      name:''
  },
    onTabStage(){
        wx.navigateTo({
            url: '/pages/financial/edit/funding-programs/stage/index?'+`value=${this.data.phase}`
        })
    },
    onPut(e){
      console.log(e.detail.value)
        this.setData({
            name:e.detail.value
        })
    },
    bindDateChange: function (e) {
        this.setData({
            date: e.detail.value
        })
    },

    bindCountryChange: function(e) {
        console.log('picker country 发生选择改变，携带值为', e.detail.value);

        this.setData({
            countryIndex: e.detail.value,
            accuntNum:e.detail.value,
        })

    },
    onSave(){
      if(this._verify()){
          if(this.data.options.type == "new"){
              //新建的时候需要push进his
              var pages = getCurrentPages();

              var prevPage = pages[pages.length - 2];
              let his = prevPage.data.his
              his.push({
                  time:this.data.date,
                  investmentAmount:this.data.accountNum,
                  phase:this.data.phase,
                  investors:[this.data.name]
              })
              prevPage.setData({
                  his
              })

              wx.navigateBack()
          }else{
              var pages = getCurrentPages();

              var prevPage = pages[pages.length - 2];
              let his = prevPage.data.his
              his[this.data.index]={
                  time:this.data.date,
                  investmentAmount:this.data.accountNum,
                  phase:this.data.phase,
                  investors:[this.data.name]
              }
              prevPage.setData({
                  his
              })
              wx.navigateBack()
          }

      }
    },
    _verify(){
    const me = this
    if(this.data.phase==''){
        me.setData({
            showTopTips:true,
            tip:'请选择阶段'
        })
        setTimeout(()=>{
          me.setData({
              showTopTips:false,
          })
        },2000)
        return false
      }
        if(this.data.name==''){
            me.setData({
                showTopTips:true,
                tip:'请填写投资人'
            })
            setTimeout(()=>{
                me.setData({
                    showTopTips:false,
                })
            },2000)
            return false
        }
        return true
    },
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
      console.log(options);
      this.setData({
          options,
          }
      )
      if(options.type == 'new'){
          console.log(options.type);
      }else {
        let info = JSON.parse(options.info)
          console.log(info)
          //
          let index = options.index
          this.setData({
              index,
          })

      }
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})
